
@{
    ViewData["Title"] = "Update";
}

@model Product 
<h1>Ürün Güncelleme</h1>
<form asp-controller="Products" asp-action="Update" asp-route-updateId="@Model.Id" method="post">
    
    <label>Ürün İsmi:</label>
    <input type="text" asp-for="Name" />
    <br />
    <label>Ürün Fiyatı:</label>
    <input type="text" asp-for="Price" />
    <br />
    <label>Ürün Stoğu:</label>
    <input type="text" asp-for="Stock" />
    <br />
    <label>Ürün Rengi:</label>
    <input type="text" asp-for="Color" />
    <br />
    <button type="Submit">Güncelle</button>
</form>

